            </div>
        </div>
        <div class="col-xs-12" id="list-chapter">
            <div class="title-list"><h2>Danh sách chương</h2></div>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <ul class="list-chapter">
                            @{
                            int i = Model.Data.FirstRowOnPage;
                            foreach (var chapter in Model.Data.Results.Take(25))
                            {

                                var url = Model.StoryAlias + "-c." + i + ".html";
                                <li>
                                    <span class="glyphicon glyphicon-certificate"></span>
                                    <a href="@url"
                                   title="@chapter.name">
                                        <span class="chapter-text"></span>@Html.Raw(chapter.name)
                                    </a>
                                </li>
                                i++;
                            }
                      }
                          
                    </ul>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6">
                    <ul class="list-chapter">
                        @{
                            int j = Model.Data.FirstRowOnPage + 25;
                            foreach (var chapter in Model.Data.Results.Skip(25).Take(25))
                            {
                                var url = "/" + chapter.name + "-p." + 3 + ".html";
                                <li>
                                    <span class="glyphicon glyphicon-certificate"></span>
                                    <a href="chuong-1/index.html"
                                   title="@chapter.name">
                                        <span class="chapter-text"></span>@Html.Raw(chapter.name)
                                    </a>
                                </li>
                                j++;
                            }
                        }
                    </ul>
                </div>
            </div>
            <input id="truyen-id" type="hidden" value="31644" /><input id="total-page"
                                                                       type="hidden"
                                                                       value="72" /><input id="truyen-ascii"
                                                                                           type="hidden"
                                                                                           value="chien-than-thanh-y-huyen-thoai-thanh-y" /><input id="truyen-comment"
