                             width="100"
                             height="150"
                             srcset="
                      @Model.StoryDetail?.thumnail 100w,
                      @Model.StoryDetail?.thumnail 216w,
                      @Model.StoryDetail?.thumnail 400w
                    "
                             sizes="(min-width: 1200px) 216px, (min-width: 992px) 128px, (min-width: 768px) 158px, 100px" />
