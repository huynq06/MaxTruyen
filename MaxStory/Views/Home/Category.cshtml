 @model MaxStory.Models.CategoryViewModel
@section css
    {
    <link href="~/content/category.css" rel="stylesheet" />
    <link href="~/static.trumtruyen.vip/min/g/maincss-cat-030423-2.css" rel="stylesheet" />
}
    @section Scripts
{
<script src="~/static.trumtruyen.vip/min/g/mainjs-cat-121222-5.js"></script>
}
<div class="container" id="list-page">
        <div class="col-xs-12 col-sm-12 col-md-9 col-truyen-main">
          <div class="text-center"></div>
          <div class="list list-main list-truyen col-xs-12">
            <div class="title-list cat-title">
              <h2>Đam Mỹ Cổ Đại</h2>
              <div class="filter">
                <a href="hoan/index.html">Đam Mỹ Cổ Đại hoàn (full)</a>
              </div>
            </div>
            @foreach (var story in Model.Stories)
            {
                var url = "/" + story.urlDetail.Replace("https://trumtruyen.vn/", "").Trim('/') + "-s." + 3 + ".html";
                  <div class="row" itemscope itemtype="https://schema.org/Book">
              <div class="col-xs-3 col-sm-2 col-md-3 col-list-image">
                <div>
                  <img
                    src="@story.thumnail"
                    srcset="
                      @story.thumnail 1x,
                      @story.thumnail 2x
                    "
                    class="cover"
                    alt="@story.name"
                    width="90"
                    height="135"
                  />
                </div>
              </div>
              <div class="col-xs-9 col-sm-10 col-md-9 col-list-info">
                <div>
                  <span class="glyphicon glyphicon-book"></span>
                  <h3 class="truyen-title" itemprop="name">
                    <a
                      href="@url"
                      title="@story.name"
                      itemprop="url"
                      >@story.name</a
                    >
                  </h3>
                  <span class="label-title label-new"></span
                  ><span class="author" itemprop="author"
                    ><span class="glyphicon glyphicon-pencil"></span> @story.author</span
                  ><span class="author"
                    ><span class="glyphicon glyphicon-list"></span> @story.chapterTotal
                    chương</span
                  >
                </div>
              </div>
            </div>
            }
          </div>
        </div>
        <div
          class="visible-md-block visible-lg-block col-md-3 text-center col-truyen-side"
        >
          <div class="panel cat-desc text-left">
            <div class="panel-body">
              Tổng hợp những bộ truyện đam mỹ có bối cảnh thời cổ đại, thường là
              thời phong kiến.
            </div>
          </div>
          <div
            class="list list-truyen list-cat col-xs-12"
            id="cat-list-side"
          ></div>
          <div class="list list-truyen list-side col-xs-12">
            <div id="top-list-side-container"></div>
          </div>
        </div>
    <div class="container text-center pagination-container">
        <div class="col-xs-12 col-sm-12 col-md-9 col-truyen-main">
            <ul class="pagination">
                @(await Component.InvokeAsync("Pager", Model.Data))
            </ul>
        </div>
    </div>  
      </div>
